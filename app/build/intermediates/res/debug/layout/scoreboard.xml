		<Button
		    android:id="@+id/btnRecount"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:text="Recount" />

		<ListView
		 android:id="@+id/lvDraw"
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content">
		</ListView>
